rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== 認証ヘルパー関数 =====

    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return isAuthenticated() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data
        : null;
    }

    function isAdmin() {
      let user = getUserData();
      return user != null && user.role == 'admin';
    }

    function isProjectManager() {
      let user = getUserData();
      return user != null && user.role == 'project_manager';
    }

    // ===== ユーザーコレクション =====

    match /users/{userId} {
      // 自分のユーザー情報は読み取り・作成・更新可能
      allow read, create, update: if isAuthenticated() && request.auth.uid == userId;
      // 管理者は全ユーザーを読み取り・更新可能
      allow read, update: if isAdmin();
      allow delete: if false;
    }

    // ===== 組織コレクション =====

    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ===== プロジェクトコレクション（簡易版） =====

    match /orgs/{orgId}/projects/{projectId} {
      // 認証済みユーザーは読み取り可能（API側で権限チェック）
      allow read: if isAuthenticated();
      // 管理者とPMは作成・更新可能
      allow create, update: if isAdmin() || isProjectManager();
      allow delete: if isAdmin();

      // プロジェクトメンバー
      match /members/{memberId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin() || isProjectManager();
      }
    }

    // ===== タスクコレクション（簡易版） =====

    match /orgs/{orgId}/tasks/{taskId} {
      // 認証済みユーザーは読み取り可能（API側で権限チェック）
      allow read: if isAuthenticated();
      // 認証済みユーザーは作成・更新可能（API側で権限チェック）
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin() || isProjectManager();
    }

    // ===== 担当者コレクション =====

    match /orgs/{orgId}/people/{personId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isProjectManager();
    }

    // ===== 通知コレクション =====

    match /orgs/{orgId}/notifications/{notificationId} {
      // 自分宛ての通知のみ読み取り・更新可能
      allow read, update: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      allow create: if isAuthenticated();
      allow delete: if false;
    }
  }
}
