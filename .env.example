# Firebase Admin SDK
GOOGLE_APPLICATION_CREDENTIALS=/path/to/serviceAccountKey.json

# Organization ID
ORG_ID=archi-prisma

# Google Service Account (for Gmail & Calendar API)
GSA_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GSA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Notification sender email
NOTIFICATION_SENDER=no-reply@archi-prisma.co.jp

# Allowed user emails (comma-separated, supports wildcard)
# Leave empty to allow all users (access controlled by organization membership)
# Example: ALLOW_EMAILS=*@example.com,user@domain.com
ALLOW_EMAILS=

