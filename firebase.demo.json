{
  "hosting": {
    "site": "compass-demo",
    "public": "web/dist",
    "ignore": ["firebase.json", "firebase.demo.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      }
    ],
    "rewrites": [{ "source": "**", "destination": "/index.html" }],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
