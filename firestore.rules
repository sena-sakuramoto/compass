rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== 認証ヘルパー関数 =====

    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return isAuthenticated() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data
        : null;
    }

    function isAdmin() {
      let user = getUserData();
      return user != null && user.role == 'admin';
    }

    function isProjectManager() {
      let user = getUserData();
      return user != null && user.role == 'project_manager';
    }

    // ===== デモユーザーコレクション（リード獲得用） =====

    match /demo_users/{userId} {
      // 認証済みユーザーは自分のドキュメントを作成・更新可能
      allow read, create, update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if false;
    }

    // ===== ユーザーコレクション =====

    match /users/{userId} {
      // 自分のユーザー情報は読み取り・作成・更新可能
      allow read, create, update: if isAuthenticated() && request.auth.uid == userId;
      // 管理者は全ユーザーを読み取り・更新可能
      allow read, update: if isAdmin();
      allow delete: if false;
    }

    // ===== 組織コレクション =====

    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ===== プロジェクトコレクション =====

    match /orgs/{orgId}/projects/{projectId} {
      // プロジェクトメンバーかどうかをチェック（他組織から招待された場合）
      function isMember() {
        return isAuthenticated() &&
               exists(/databases/$(database)/documents/orgs/$(orgId)/projects/$(projectId)/members/$(request.auth.uid));
      }

      // ユーザーの組織IDが一致するかチェック（プロジェクト作成組織のメンバー）
      function isOrgMember() {
        let user = getUserData();
        return user != null && user.orgId == orgId;
      }

      // プロジェクト作成組織のメンバー全員 + 招待されたメンバーが閲覧可能
      allow read: if isMember() || isOrgMember() || isAdmin();
      // 管理者とPMは自組織内でのみ作成・更新可能
      allow create, update: if (isAdmin() || isProjectManager()) && isOrgMember();
      allow delete: if isAdmin() && isOrgMember();

      // プロジェクトメンバー
      match /members/{memberId} {
        // プロジェクト作成組織のメンバー全員 + 招待されたメンバーが閲覧可能
        allow read: if isMember() || isOrgMember() || isAdmin();
        // 書き込みは組織の管理者・PMのみ（組織チェック追加）
        allow write: if (isAdmin() || isProjectManager()) && isOrgMember();
      }
    }

    // ===== タスクコレクション =====

    match /orgs/{orgId}/tasks/{taskId} {
      // タスクにアクセスできるかチェック（プロジェクトメンバーのみ）
      function canAccessTask() {
        let task = resource.data;
        let projectId = task.projectId;
        return isAuthenticated() &&
               exists(/databases/$(database)/documents/orgs/$(orgId)/projects/$(projectId)/members/$(request.auth.uid));
      }

      // 新規作成時のプロジェクトメンバーチェック
      function canCreateTask() {
        let task = request.resource.data;
        let projectId = task.projectId;
        return isAuthenticated() &&
               exists(/databases/$(database)/documents/orgs/$(orgId)/projects/$(projectId)/members/$(request.auth.uid));
      }

      // ユーザーの組織IDが一致するかチェック
      function isOrgMember() {
        let user = getUserData();
        return user != null && user.orgId == orgId;
      }

      // プロジェクトメンバーは読み取り・作成・更新可能
      allow read: if canAccessTask() || isAdmin();
      allow create: if canCreateTask() && isOrgMember();
      allow update: if (canAccessTask() || isAdmin()) && isOrgMember();
      allow delete: if (isAdmin() || isProjectManager()) && isOrgMember();
    }

    // ===== 担当者コレクション =====

    match /orgs/{orgId}/people/{personId} {
      // ユーザーの組織IDが一致するかチェック
      function isOrgMember() {
        let user = getUserData();
        return user != null && user.orgId == orgId;
      }

      // 自組織のメンバーまたは管理者が閲覧可能
      // （プロジェクトベースの細かいアクセス制御はAPI層で実装）
      allow read: if isAuthenticated() && (isOrgMember() || isAdmin());
      allow write: if (isAdmin() || isProjectManager()) && isOrgMember();
    }

    // ===== クライアントコレクション =====

    match /orgs/{orgId}/clients/{clientId} {
      // ユーザーの組織IDが一致するかチェック
      function isOrgMember() {
        let user = getUserData();
        return user != null && user.orgId == orgId;
      }

      allow read: if isAuthenticated() && isOrgMember();
      allow write: if (isAdmin() || isProjectManager()) && isOrgMember();
    }

    // ===== 協力者コレクション =====

    match /orgs/{orgId}/collaborators/{collaboratorId} {
      // ユーザーの組織IDが一致するかチェック
      function isOrgMember() {
        let user = getUserData();
        return user != null && user.orgId == orgId;
      }

      allow read: if isAuthenticated() && isOrgMember();
      allow write: if (isAdmin() || isProjectManager()) && isOrgMember();
    }

    // ===== 通知コレクション =====

    match /orgs/{orgId}/notifications/{notificationId} {
      // 自分宛ての通知のみ読み取り・更新可能
      allow read, update: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      allow create: if isAuthenticated();
      allow delete: if false;
    }
  }
}
